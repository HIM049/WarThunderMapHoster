{{ define "base" }}
<!DOCTYPE html>
<html>
<head>
    <title>{{ template "title" . }}</title>
    <meta charset="UTF-8">
    <style>
        body {
            margin: 0;
            font-family: "Microsoft YaHei UI", "Microsoft YaHei", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;        }
        .container {
            max-width: 1000px;
            margin: 0 auto;
            padding: 0 16px;
        }
        header {
            background-color: #f8f8f8;
            border-bottom: 1px solid #ddd;
        }
        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            height: 60px;
        }
        .site-title {
            font-size: 20px;
            font-weight: bold;
        }
        .nav-buttons a {
            margin-left: 20px;
            text-decoration: none;
            color: #333;
            font-weight: 500;
        }
        main {
            padding: 20px 0;
        }
        footer {
            text-align: center;
            padding: 20px 0;
            color: #666;
            font-size: 14px;
            border-top: 1px solid #ddd;
            margin-top: 40px;
        }
    </style>
</head>
<body>
    <header>
        <div class="container navbar">
            <div class="site-title">网站名称</div>
            <div class="nav-buttons">
                <a href="/about">关于</a>
                <a href="/contact">联系</a>
            </div>
        </div>
    </header>

    <main class="container">
        {{ template "content" . }}
    </main>

    <footer>
        <div class="container">
            <p>版权信息 © 2025</p>
        </div>
    </footer>
</body>
</html>
{{ end }}
